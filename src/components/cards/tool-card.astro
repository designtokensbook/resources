---
const { title, description, image } = Astro.props;
---

<div class="p-4 max-w-sm">
  <div
    class="flex rounded-lg h-full bg-primary dark:bg-accent p-8 flex-col items-center text-center"
  >
    <img class="w-32 h-32" src={image} alt="Specify logo" />

    <div class="flex flex-col justify-between flex-grow text-card-foreground">
      <div class="font-bold text-xl mb-2">{title}</div>
      <p class="text-base flex-grow: 1">
        {description}
      </p>
    </div>
  </div>
</div>
