---
import { cn } from "@/lib/utils";
import { ThemeToggle } from "@/components/theme-toggle";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<footer class={cn(className)}>
  <div
    class="container flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0 mt-12"
  >
    <hr />
    <div
      class="flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0"
    >
      <ul
        class="flex flex-col md:flex-row gap-8 text-center text-sm leading-loose md:text-left balance-text font-medium"
      >
        <li>
          <a href="https://frontguys.fr/the-design-tokens-book/" target="_blank"
            >Obtenir le livre</a
          >
        </li>
        <li class="hidden">
          <a href="https://www.amazon.fr" target="_blank">Acheter le livre</a>
        </li>
        <li>
          <a
            href="https://www.meetup.com/fr-FR/designops-meetup/"
            target="_blank">Découvrir les meetups</a
          >
        </li>
        <li>
          <a href="https://github.com/designtokensbook/website" target="_blank"
            >Proposer une amélioration</a
          >
        </li>
      </ul>
    </div>
    <ThemeToggle client:idle />
  </div>
</footer>
