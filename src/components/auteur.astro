---
const { title, description, image } = Astro.props;
---

<div class="p-4 max-w-sm">
  <div class="flex p-8 flex-col items-center text-center">
    <img src={image} class="rounded-full" alt="photo de l'auteur" />

    <div
      class="flex flex-col justify-between flex-grow text-card-foreground mt-6"
    >
      <div class="mb-2 font-bold text-sm lg:text-lg">{title}</div>
      <p class="text-sm lg:text-lg flex-grow: 1">
        {description}
      </p>
    </div>
  </div>
</div>
