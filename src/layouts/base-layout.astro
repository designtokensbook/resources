---
import BaseHead from "@/components/layout/base-head.astro";
import { cn } from "@/lib/utils";

type Props = {
  title: string;
  description?: string;
  canonical?: string;
  bodyClass?: string;
};

const { title, description, bodyClass, canonical } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} />
  </head>
  <body class={cn("flex flex-col min-h-screen", bodyClass)}>
    <slot />
  </body>
</html>
